{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "types/**/*.d.ts", "index.d.ts"]
}
